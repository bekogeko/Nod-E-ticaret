<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Adasan Admin</title>



    <script src="https://kit.fontawesome.com/141e174bc9.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../../assets/bootstrap/css/bootstrap.min.css">

    <script src="../../assets/js/jquery.min.js"></script>
    <script src="../../assets/bootstrap/js/bootstrap.min.js"></script>



    <link rel="stylesheet" href="../../assets/css/adminMain.css">
    <script src="../../js/jquery/adminProducts.js"></script>


    <style>
        .view:hover {
            color: #2aabe5;
        }

        .edit:hover {
            color: #ffa500;
        }

        .delete:hover {
            color: red;
        }

        .view {
            transition-duration: 0.5s;
        }

        .edit {
            transition-duration: 0.5s;
        }

        .delete {
            transition-duration: 0.5s;
        }

        .dot {
            height: 25px;
            width: 25px;
            border: 3px grey;
            border-radius: 50%;
            display: inline-block;
            margin-left: 5px;
            margin-right: 5px;
        }
    </style>

</head>

<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">Adasan</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse"
            data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="/logout">Sign out</a>
            </li>
        </ul>
    </nav>
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <!-- SVG Class isimleri (feather  feather-file) -->
        <div class="sidebar-sticky pt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link " href="/admin/dashboard">
                        <span data-feather="home"></span>
                        Dashboard <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <span data-feather="file"></span>
                        Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/admin/products">
                        <span data-feather="shopping-cart"></span>
                        Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="/admin/registerReq">
                        <span data-feather="users"></span>
                        Registration Requests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <span data-feather="bar-chart-2"></span>
                        Reports
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <span data-feather="layers"></span>
                        Integrations
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm">
                                <h2>Products <b>Details</b></h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category </th>
                                <th scope="col">Name</th>
                                <th scope="col">Color Schema</th>
                                <th scope="col">Eylemler</th>
                            </tr>
                        </thead>
                        </thead>
                        <tbody id='productsTable'>
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div class="hint-text" id='productsTableShowInfo'>Showing <b>5</b> out of <b>25</b> entries
                        </div>

                        </ul>
                    </div>
                </div>
            </div>
            <div id="modals">

            </div>

        </div>
    </main>
</body>

</html>

