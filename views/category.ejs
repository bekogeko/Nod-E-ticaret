<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Adasan Admin</title>

    <link rel="stylesheet" href="../../assets/font-awesome/css/all.css">
    <link rel="stylesheet" href="../../assets/bootstrap/css/bootstrap.min.css">

    <script src="../../assets/js/jquery.min.js"></script>
    <script src="../../assets/bootstrap/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="../../assets/css/adminMain.css">
    <script src="../../js/jquery/adminProducts.js"></script>
</head>

<body>
    

    <% if (products) { %>
        <div class="container">
            <div class="row">
                <% products.forEach(element => { %>
                    <div class="card" style="width: 18rem;">
                
                        <img class="card-img-top" src="../../assets/img/<%=element.urunPhotos[0].coloredPreviewPath%>"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"><%= element.urunName %> </h5>
                            <p class="card-text">Color Palette Size: <%= element.urunPhotos.length %> </p>
                            <a href="/product/<%= element.urunName %> " class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } else {%>
    eee sende yettin ama
    <%}%>

    </body>
</html>